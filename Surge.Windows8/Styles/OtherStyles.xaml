<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Margin" Value="2,26,-2,24" />
        <Setter Property="Visibility" Value="Collapsed" />
    </Style>
    
    <Style x:Key="DetailsLineStyle" TargetType="Line">
        <Setter Property="X1" Value="0" />
        <Setter Property="Y1" Value="0" />
        <Setter Property="Y2" Value="0" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke" Value="{StaticResource DarkBackgroundBrush}" />
    </Style>

    <Style x:Key="TorrentListHeaderStyle" TargetType="Panel">
        <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush}" />
    </Style>

    <Style x:Key="TorrentListSearchResultsStyle" TargetType="Panel">
        <Setter Property="Background" Value="{StaticResource LightBackgroundBrush}" />
    </Style>
</ResourceDictionary>