                </StackPanel>
            </StackPanel>-->

            <TextBlock Text="Third Party"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   FontSize="22"
                   Margin="10, 12, 15, 5"
                   TextAlignment="Left"
                   LineHeight="22"
                   HorizontalAlignment="Left"
                   Style="{StaticResource PageSubheaderDetailsTextStyle}" />

            <TextBlock Text="Surge uses the following libraries."
                   TextWrapping="Wrap"
                   FontSize="16"
                   Width="260"
                   Margin="10, 0, 15, 20"
                   TextAlignment="Left"
                   LineHeight="22"
                   HorizontalAlignment="Left"
                   Style="{StaticResource PageSubheaderDetailsTextStyle}" />

            <StackPanel Margin="10, 0, 15, 20">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Foreground="White"
                            Height="22"
                            Symbol="Globe"/>
                    <TextBlock TextWrapping="Wrap"
                        FontSize="18"
                        Margin="10, -3, 0, 5"
                        TextAlignment="Left"
                        LineHeight="18"
                        HorizontalAlignment="Left"
                        Style="{StaticResource PageSubheaderDetailsTextStyle}">
                    <Hyperlink NavigateUri="http://james.newtonking.com/json"
                                Foreground="White">Json.NET</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="10, 0, 15, 20">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Foreground="White"
                            Height="22"
                            Symbol="Globe"/>
                    <TextBlock TextWrapping="Wrap"
                        FontSize="18"
                        Margin="10, -3, 0, 5"
                        TextAlignment="Left"
                        LineHeight="18"
                        HorizontalAlignment="Left"
                        Style="{StaticResource PageSubheaderDetailsTextStyle}">
                    <Hyperlink NavigateUri="http://www.codeproject.com/Articles/527686/A-WinRT-CollectionView-class-with-Filtering-and-So"
                                Foreground="White">ListFilter</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="10, 0, 15, 20">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Foreground="White"
                            Height="22"
                            Symbol="Globe"/>
                    <TextBlock TextWrapping="Wrap"
                        FontSize="18"
                        Margin="10, -3, 0, 5"
                        TextAlignment="Left"
                        LineHeight="18"
                        HorizontalAlignment="Left"
                        Style="{StaticResource PageSubheaderDetailsTextStyle}">
                    <Hyperlink NavigateUri="https://msdn.microsoft.com/en-us/library/ff648465.aspx"
                                Foreground="White">Prism</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="10, 0, 15, 20">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Foreground="White"
                            Height="22"
                            Symbol="Globe"/>
                    <TextBlock TextWrapping="Wrap"
                        FontSize="18"
                        Margin="10, -3, 0, 5"
                        TextAlignment="Left"
                        LineHeight="18"
                        HorizontalAlignment="Left"
                        Style="{StaticResource PageSubheaderDetailsTextStyle}">
                    <Hyperlink NavigateUri="http://unity.codeplex.com/"
                                Foreground="White">Splat</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="10, 0, 15, 20">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Foreground="White"
                            Height="22"
                            Symbol="Globe"/>
                    <TextBlock TextWrapping="Wrap"
                        FontSize="18"
                        Margin="10, -3, 0, 5"
                        TextAlignment="Left"
                        LineHeight="18"
                        HorizontalAlignment="Left"
                        Style="{StaticResource PageSubheaderDetailsTextStyle}">
                    <Hyperlink NavigateUri="http://james.newtonking.com/json"
                                Foreground="White">Unity</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="10, 0, 15, 20">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Foreground="White"
                            Height="22"
                            Symbol="Globe"/>
                    <TextBlock TextWrapping="Wrap"
                        FontSize="18"
                        Margin="10, -3, 0, 5"
                        TextAlignment="Left"
                        LineHeight="18"
                        HorizontalAlignment="Left"
                        Style="{StaticResource PageSubheaderDetailsTextStyle}">
                    <Hyperlink NavigateUri="http://winrtxamltoolkit.codeplex.com/"
                                Foreground="White">WinRT XAML Toolkit</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</SettingsFlyout>